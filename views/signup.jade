.modal.fade#signup(role='dialog', aria-labelledby='label', aria-hidden='true')
	.modal-dialog
		.modal-content
			.modal-header
				button(type="button" class="close" data-dismiss="modal")
					span(aria-hidden="true") x
					span(class="sr-only") Close
				h4.modal-title Please Sign Up
			form.form-horizontal#signupForm(role="form" method="post" action="/signup")
				.modal-body
					.form-group
						label.col-sm-4.control-label(for="username") Username 
						.col-sm-8
							input.form-control(type='text' name='username')
					.form-group
						label.col-sm-4.control-label(for="password") Password 
						.col-sm-8
							input.form-control(type='password' name='password')
					.form-group
						label.col-sm-4.control-label(for="password") Confirm Password 
						.col-sm-8
							input.form-control(type='password' name='confirm')
				.modal-footer
					button.btn.btn-primary(type='submit') Sign Up
