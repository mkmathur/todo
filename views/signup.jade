.modal.fade#signup(role='dialog', aria-labelledby='label', aria-hidden='true')
	.modal-dialog
		.modal-content
			.modal-header
				button(type="button" class="close" data-dismiss="modal")
					span(aria-hidden="true") x
					span(class="sr-only") Close
				h4.modal-title#label Please Sign Up
			.modal-body
				form.form-horizontal(role="form")
					.form-group
						label.col-sm-4.control-label(for="username") Username 
						.col-sm-8
							input.form-control#email(type='text')
					.form-group
						label.col-sm-4.control-label(for="password") Password 
						.col-sm-8
							input.form-control#password(type='text')
					.form-group
						label.col-sm-4.control-label(for="password") Confirm Password 
						.col-sm-8
							input.form-control#confirm(type='text')
			.modal-footer
				button.btn.btn-primary(type='button') Sign Up
